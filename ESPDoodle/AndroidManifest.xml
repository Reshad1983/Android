<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.espdoodle"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="18" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.espdoodle.ESPDoodleLaunchActivity"
            android:label="@string/title_activity_espdoodle_launch" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.espdoodle.OpenMeetingActivity"
            android:label="@string/title_activity_new_meeting" >
        </activity>
        <activity
            android:name="com.example.espdoodle.CheckOpenMeetingActivity"
            android:label="@string/title_activity_open_request" >
        </activity>
        <activity
            android:name="com.example.espdoodle.SelectTimeActivity"
            android:label="@string/title_activity_select_time" >
        </activity>
        <activity
            android:name="com.example.espdoodle.CheckMeetingRespondActivity"
            android:label="@string/title_activity_closed_meeting_request" >
        </activity>
        <activity
            android:name="com.example.espdoodle.CheckClosedMeetingActivity"
            android:label="@string/title_activity_planned_meeting" >
        </activity>

        <service android:name="com.example.espdoodle.TheService" >
        </service>

        <activity
            android:name="com.example.espdoodle.ESPDoodleMainMenuActivity"
            android:label="@string/title_activity_espdoodle_main_menu" >
        </activity>
        <activity
            android:name="com.example.espdoodle.SelectTimeSlotsActivity"
            android:label="@string/title_activity_select_timeslot" >
        </activity>
    </application>

    <uses-permission android:name="android.permission.INTERNET" />

</manifest>
