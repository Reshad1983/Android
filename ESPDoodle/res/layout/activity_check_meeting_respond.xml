<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".CheckMeetingRespondActivity" >

    <TextView
        android:id="@+id/check_meeting_respond_lblMeetingId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="18dp"
        android:text="Meeting Id" />

    <EditText
        android:id="@+id/check_meeting_respond_txtMeetingId"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:singleLine="true"
        android:imeOptions="actionDone"
        android:layout_below="@+id/check_meeting_respond_lblMeetingId"
        android:ems="10" >

        <requestFocus />
    </EditText>

    <Button
        android:id="@+id/check_meeting_respond_btnCheck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/check_meeting_respond_txtMeetingId"
        android:layout_centerHorizontal="true"
        android:text="Check" />

    <RadioGroup
        android:id="@+id/check_meeting_respond_radioGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/check_meeting_respond_txtMeetingId"
        android:layout_below="@+id/check_meeting_respond_btnCheck"
        android:layout_marginTop="25dp" >

        <RadioButton
            android:id="@+id/check_meeting_respond_time1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="" />

        <RadioButton
            android:id="@+id/check_meeting_respond_time2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="" />

        <RadioButton
            android:id="@+id/check_meeting_respond_time3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="" />
    </RadioGroup>

    <Button
        android:id="@+id/check_meeting_respond_btnChoose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/check_meeting_respond_radioGroup"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:text="Choose" />

</RelativeLayout>