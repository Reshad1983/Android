<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:id="@+id/layout_id"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.example.reshad.firstassignment.NewCountryActivity"
    android:weightSum="1">

    <EditText
        android:id="@+id/weight_id"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.06"
        android:hint="Visited Country" />

    <EditText
        android:id="@+id/length_id"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_weight="0.05"
        android:hint="Date of visit" />
    <TextView
        android:id="@+id/result_view_id"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:layout_gravity="center"/>

    <Button
        android:id="@+id/compute_button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Compute"
        android:layout_marginTop="10dp" />
    <Button
        android:id="@+id/reset_button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Reset"
        android:layout_marginTop="10dp" />

</LinearLayout>
