<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:padding="@dimen/widget_margin" android:background="#09C">

    <ImageView
        android:id="@+id/icon_view"
        android:layout_width="80sp"
        android:layout_height="80sp"
        android:background="@drawable/klart"
        android:layout_marginRight="20dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />


    <TextView android:id="@+id/appwidget_city" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/appwidget_text"
        android:textColor="#ffffff" android:textSize="24sp" android:textStyle="bold|italic"
        android:background="#09C"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/appwidget_temp" />


    <TextView android:id="@+id/appwidget_temp" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/appwidget_text"
        android:textColor="#ffffff" android:textSize="24sp" android:textStyle="bold|italic"
        android:background="#09C"
        android:layout_marginRight="10dp"
        android:layout_alignBottom="@+id/icon_view"
        android:layout_centerHorizontal="true" />

</RelativeLayout>