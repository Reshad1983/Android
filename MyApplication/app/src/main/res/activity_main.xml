<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".Main">

    <TextView android:id="@+id/randomnumber_id" android:text="@string/random_number" android:layout_width="fill_parent"
        android:layout_height="30dp" android:padding="5dp"
        android:background="@color/blue" android:textColor="@color/white"/>

    <TextView android:id="@+id/bmi_id" android:text="@string/bmi_string" android:layout_width="fill_parent"
        android:layout_height="30dp" android:padding="5dp"
        android:background="@color/blue" android:textColor="@color/white"/>

    <TextView android:id="@+id/visited_id" android:text="@string/visited_country" android:layout_width="fill_parent"
        android:layout_height="30dp" android:padding="5dp"
        android:background="@color/blue" android:textColor="@color/white"/>

    <TextView android:id="@+id/vaxjoweather_id" android:text="@string/title_activity_vaxjoweather" android:layout_width="fill_parent"
        android:layout_height="30dp" android:padding="5dp"
        android:background="@color/blue" android:textColor="@color/white"/>

</LinearLayout>
