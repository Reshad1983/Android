<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
	<TextView 
		android:layout_width="fill_parent"
		android:layout_height="wrap_content" 
		android:text="Bind to SlowCount Service"
		android:gravity="center" 
		android:textColor="#ffffff80"
		android:background="#ff000099" 
		android:textSize="20sp" 
		android:height="60sp" />
		
	<Button android:id="@+id/start_button"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content" 
		android:text="Bind"
		android:layout_gravity="center" />
		
	<TextView android:id="@+id/data_display" 
		android:layout_width="fill_parent"
		android:layout_height="wrap_content" 
		android:text="No Data"
		android:gravity="center" 
		android:textColor="#ffffff80"
		android:background="#ff000099" 
		android:textSize="20sp" 
		android:height="60sp" />
		
	<Button android:id="@+id/pull_button" 
		android:layout_width="wrap_content"
		android:layout_height="wrap_content" 
		android:text="Pull Data"
		android:layout_gravity="center" />
		
	<TextView 
		android:layout_width="fill_parent"
		android:layout_height="wrap_content" 
		android:text="Unbind to SlowCount Service"
		android:gravity="center" 
		android:textColor="#ffffff80"
		android:background="#ff000099" 
		android:textSize="20sp" 
		android:height="60sp" />
		
	<Button android:id="@+id/stop_button" 
		android:layout_width="wrap_content"
		android:layout_height="wrap_content" 
		android:text="Unbind"
		android:layout_gravity="center" />
</LinearLayout>
